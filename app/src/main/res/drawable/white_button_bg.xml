<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:top="3dp" android:right="0dp" android:bottom="3dp"
        android:left="3dp">
        <selector>
            <item android:state_pressed="true"  >
                <shape android:shape="rectangle">
                    <solid android:color="@color/red_color" />
                </shape>
            </item>
            <item >
                <shape android:shape="rectangle" android:right="5dp" android:top="5dp">
                    <solid android:color="@color/white_color" />
                   <!-- <stroke android:width="1dp" android:color="@color/gray_color" />-->
                </shape>
            </item>
        </selector>
    </item>

</layer-list>