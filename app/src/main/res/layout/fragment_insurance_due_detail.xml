<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/matt_black">

    <LinearLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/matt_black"
        android:clickable="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:id="@+id/car_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:padding="@dimen/dimen_5dp"
                android:textColor="@color/white" />

            <ImageButton
                android:id="@+id/chat_btn"
                android:layout_width="@dimen/dimen_24dp"
                android:layout_height="@dimen/dimen_24dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="4dp"
                android:layout_marginRight="@dimen/dimen_10dp"
                android:background="@drawable/ic_whatsapp"
                android:textColor="@color/selector_white_button_text_color" />

            <ImageButton
                android:id="@+id/call_btn"
                android:layout_width="@dimen/dimen_24dp"
                android:layout_height="@dimen/dimen_24dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/home_call"
                android:textColor="@color/selector_white_button_text_color" />

        </LinearLayout>



            <LinearLayout
                android:id="@+id/ll_insurance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_background_cardblack_corner8dp"
                android:orientation="vertical"
                android:layout_margin="@dimen/dimen_10dp"
                android:padding="8dp">

                <autroid.business.view.customviews.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:drawablePadding="10dp"
                    android:text="Insurance Details"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <autroid.business.view.customviews.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Policy Holder : "
                        android:textColor="@color/white_dark"
                        android:textSize="12sp" />

                    <autroid.business.view.customviews.CustomTextView
                        android:id="@+id/policy_holder_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textColor="@color/white_light"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <autroid.business.view.customviews.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Policy Number : "
                        android:textColor="@color/white_dark"
                        android:textSize="12sp" />

                    <autroid.business.view.customviews.CustomTextView
                        android:id="@+id/policy_number"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textColor="@color/white_light"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <autroid.business.view.customviews.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Insurance Company : "
                        android:textColor="@color/white_dark"
                        android:textSize="12sp" />

                    <autroid.business.view.customviews.CustomTextView
                        android:id="@+id/ins_company_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textColor="@color/white_light"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <autroid.business.view.customviews.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Expires On : "
                        android:textColor="@color/white_dark"
                        android:textSize="12sp" />

                    <autroid.business.view.customviews.CustomTextView
                        android:id="@+id/expiry_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textColor="@color/white_light"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <autroid.business.view.customviews.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Premium : "
                        android:textColor="@color/white_dark"
                        android:textSize="12sp" />

                    <autroid.business.view.customviews.CustomTextView
                        android:id="@+id/premium"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:textColor="@color/white_light"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_background_cardblack_corner8dp"
                android:layout_margin="@dimen/dimen_10dp"
                android:orientation="vertical"
                android:padding="8dp">

                <autroid.business.view.customviews.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:drawablePadding="10dp"
                    android:text="Customer Details"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <autroid.business.view.customviews.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Name : "
                        android:textColor="@color/white_dark"
                        android:textSize="12sp" />

                    <autroid.business.view.customviews.CustomTextView
                        android:id="@+id/name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textColor="@color/white_light"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <autroid.business.view.customviews.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Mobile Number : "
                        android:textColor="@color/white_dark"
                        android:textSize="12sp" />

                    <autroid.business.view.customviews.CustomTextView
                        android:id="@+id/mobile_number"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textColor="@color/white_light"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <autroid.business.view.customviews.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Email : "
                        android:textColor="@color/white_dark"
                        android:textSize="12sp" />

                    <autroid.business.view.customviews.CustomTextView
                        android:id="@+id/email"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textColor="@color/white_light"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_10dp"
            android:background="@drawable/rectangle_background_cardblack_corner8dp"
            android:clickable="true"
            android:orientation="vertical"
            android:padding="@dimen/dimen_10dp"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="Status"
                    android:textColor="@color/white_color" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_20dp"
                    android:background="@color/matt_black">

                    <autroid.business.view.customviews.CustomSpinner
                        android:id="@+id/spn_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/white_dark" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/reason_spinner_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="Reason"
                    android:textColor="@color/white_color" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_20dp"
                    android:background="@color/matt_black">

                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/reason_spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/white_dark" />

                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/follow_up_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/follow_up_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Follow-up Date &amp; Time"
                    android:textColor="@color/white_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/follow_up_text"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/follow_up_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/matt_black"
                        android:hint="Select Date"
                        android:padding="8dp"
                        android:singleLine="true"
                        android:textColor="@color/white_dark"
                        android:textColorHint="@color/gray_color_button"
                        android:textSize="@dimen/size_14sp" />

                    <TextView
                        android:id="@+id/follow_up_time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_15dp"
                        android:layout_weight="1"
                        android:background="@color/matt_black"
                        android:hint="Select Time"
                        android:padding="8dp"
                        android:singleLine="true"
                        android:textColor="@color/white_dark"
                        android:textColorHint="@color/gray_color_button"
                        android:textSize="@dimen/size_14sp" />


                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="Priority"
                    android:textColor="@color/white_color" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_20dp"
                    android:background="@color/matt_black">

                    <autroid.business.view.customviews.CustomSpinner
                        android:id="@+id/priority_spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/white_dark" />

                </RelativeLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:text="Remark"
                android:textColor="@color/white_color" />

            <EditText
                android:id="@+id/remark"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="8dp"
                android:background="@color/matt_black"
                android:fontFamily="@string/roboto_medium"
                android:gravity="start"
                android:imeOptions="actionDone"
                android:inputType="textCapSentences"
                android:padding="@dimen/dimen_8dp"
                android:textColor="@color/white_dark"
                android:textCursorDrawable="@null"
                android:textSize="14sp" />

            <Button
                android:id="@+id/update_status"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:background="@drawable/red_button_selector"
                android:minHeight="@dimen/dimen_40dp"
                android:text="Save"
                android:textColor="@color/white_color" />

        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
