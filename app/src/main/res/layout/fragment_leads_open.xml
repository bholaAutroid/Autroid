<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/matt_black"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".aws.crm.aws_leads.LeadsOpenFragment">


    <LinearLayout
        android:layout_marginTop="@dimen/dimen_20dp"
        android:id="@+id/lead_l"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="@dimen/size_18sp"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:textAlignment="center"
            android:text="New Lead"
            style="@style/style_rotobo_normal_white_bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:layout_marginHorizontal="@dimen/dimen_20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:drawableTint="@color/gray_color"
                    android:drawableLeft="@drawable/ic_round_business_24"
                    android:hint=" Name:"
                    style="@style/style_rotobo_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:backgroundTint="@color/red_color"
                    android:background="@drawable/ic_star"
                    android:layout_width="@dimen/dimen_15dp"
                    android:layout_height="@dimen/dimen_15dp"/>

                <EditText
                    android:inputType="text"
                    android:textColor="@color/white_color"
                    style="@style/style_rotobo_normal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <View
                android:background="@color/gray_color"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1dp"/>


            <LinearLayout
                android:layout_marginTop="@dimen/dimen_10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:drawableTint="@color/gray_color"
                    android:drawableLeft="@drawable/ic_call"
                    android:hint=" Phone Number:"
                    style="@style/style_rotobo_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:backgroundTint="@color/red_color"
                    android:background="@drawable/ic_star"
                    android:layout_width="@dimen/dimen_15dp"
                    android:layout_height="@dimen/dimen_15dp"/>

                <EditText
                    android:inputType="number"
                    android:textColor="@color/white_color"
                    style="@style/style_rotobo_normal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <View
                android:background="@color/gray_color"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1dp"/>


            <LinearLayout
                android:layout_marginTop="@dimen/dimen_10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:drawableTint="@color/gray_color"
                    android:drawableLeft="@drawable/ic_customer_email"
                    android:hint="  Remarks:"
                    style="@style/style_rotobo_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:inputType="text"
                    android:textColor="@color/white_color"
                    style="@style/style_rotobo_normal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <View
                android:background="@color/gray_color"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1dp"/>


            <LinearLayout
                android:background="@drawable/bg_aws_items"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50dp">

                <TextView
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:layout_gravity="center_vertical"
                    android:drawableTint="@color/gray_color"
                    android:drawableLeft="@drawable/ic_round_business_24"
                    android:hint=" Category:"
                    style="@style/style_rotobo_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:backgroundTint="@color/red_color"
                    android:background="@drawable/ic_star"
                    android:layout_width="@dimen/dimen_15dp"
                    android:layout_height="@dimen/dimen_15dp"/>


                <ImageView
                    android:layout_marginLeft="180dp"
                    android:layout_gravity="end"
                    android:backgroundTint="@color/gray_color"
                    android:background="@drawable/down_arrow_hide"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>


            <LinearLayout
                android:background="@drawable/bg_aws_items"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50dp">

                <TextView
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:layout_gravity="center_vertical"
                    android:drawableTint="@color/gray_color"
                    android:drawableLeft="@drawable/ic_round_business_24"
                    android:hint=" Category:"
                    style="@style/style_rotobo_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:backgroundTint="@color/red_color"
                    android:background="@drawable/ic_star"
                    android:layout_width="@dimen/dimen_15dp"
                    android:layout_height="@dimen/dimen_15dp"/>


                <ImageView
                    android:layout_marginLeft="180dp"
                    android:layout_gravity="end"
                    android:backgroundTint="@color/gray_color"
                    android:background="@drawable/down_arrow_hide"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:background="@drawable/bg_aws_items"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50dp">

                <TextView
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:layout_gravity="center_vertical"
                    android:drawableTint="@color/gray_color"
                    android:drawableLeft="@drawable/ic_round_business_24"
                    android:hint=" Category:"
                    style="@style/style_rotobo_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:backgroundTint="@color/red_color"
                    android:background="@drawable/ic_star"
                    android:layout_width="@dimen/dimen_15dp"
                    android:layout_height="@dimen/dimen_15dp"/>


                <ImageView
                    android:layout_marginLeft="180dp"
                    android:layout_gravity="end"
                    android:backgroundTint="@color/gray_color"
                    android:background="@drawable/down_arrow_hide"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        app:srcCompat="@drawable/ic_baseline_add_24"
        app:backgroundTint="#DC4617"
        android:layout_margin="@dimen/dimen_30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_height="wrap_content"/>


</RelativeLayout>