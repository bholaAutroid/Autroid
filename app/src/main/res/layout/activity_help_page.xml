<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/matt_black"
    android:orientation="vertical"
    tools:context="autroid.business.view.activity.HelpPageActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_20dp"
            android:layout_marginRight="@dimen/dimen_20dp"
            android:orientation="vertical">

            <TextView
                android:textAlignment="center"
                style="@style/style_rotobo_normal_white_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:layout_marginBottom="@dimen/dimen_10dp"
                android:text="How to use Autroid?"
                android:textColor="@color/white"
                android:textSize="21sp"
                android:textStyle="bold" />

            <TextView
                style="@style/style_rotobo_normal_white_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:layout_marginBottom="@dimen/dimen_10dp"
                android:text="Sales"
                android:textColor="@color/gray_color"
                android:textSize="21sp"
                android:textStyle="bold" />

            <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:autoPlay="false"
                app:showYouTubeButton="false"
                app:videoId="JWxZCZG0BMc" />

            <TextView
                style="@style/style_rotobo_normal_white_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_30dp"
                android:layout_marginBottom="@dimen/dimen_10dp"
                android:text="Purchase"
                android:textColor="@color/gray_color"
                android:textSize="21sp"
                android:textStyle="bold" />

            <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:autoPlay="false"
                app:showYouTubeButton="false"
                app:videoId="JWxZCZG0BMc" />

            <TextView
                style="@style/style_rotobo_normal_white_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_30dp"
                android:layout_marginBottom="@dimen/dimen_10dp"
                android:text="Leads"
                android:textColor="@color/gray_color"
                android:textSize="21sp"
                android:textStyle="bold" />

            <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
                android:id="@+id/youtubePlay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:autoPlay="false"
                app:showYouTubeButton="false"
                app:videoId="JWxZCZG0BMc" />

            <TextView
                android:textAlignment="center"
                style="@style/style_rotobo_normal_white_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_50dp"
                android:layout_marginBottom="@dimen/dimen_10dp"
                android:text="Need more assistance?"
                android:textColor="@color/gray_color"
                android:textSize="21sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_marginTop="@dimen/dimen_20dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:onClick="openWhatsApp"
                    app:srcCompat="@drawable/ic_whatsapp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"/>

                <TextView
                    android:onClick="OpenWhatsApp"
                    style="@style/style_rotobo_normal_white_bold"
                    android:textColor="@color/white"
                    android:textSize="17sp"
                    android:layout_marginLeft="10dp"
                    android:text="Chat"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"/>

                <TextView
                    android:textAlignment="center"
                    style="@style/style_rotobo_normal_white_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginLeft="5dp"
                    android:text="on WhatsApp"
                    android:textColor="@color/gray_color"
                    android:textSize="11sp" />

            </LinearLayout>

            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:onClick="openEmail"
                    android:tint="@color/gray_color"
                    app:srcCompat="@drawable/ic_customer_email"
                    android:layout_width="25dp"
                    android:layout_height="25dp"/>

                <TextView
                    android:onClick="openEmailChat"
                    style="@style/style_rotobo_normal_white_bold"
                    android:textColor="@color/white"
                    android:textSize="17sp"
                    android:layout_marginLeft="10dp"
                    android:text="Email"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"/>

                <TextView
                    android:textAlignment="center"
                    style="@style/style_rotobo_normal_white_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginLeft="5dp"
                    android:text="at care@autroid.com"
                    android:textColor="@color/gray_color"
                    android:textSize="11sp" />

            </LinearLayout>

            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:onClick="opnePhone"
                    android:tint="@color/gray_color"
                    app:srcCompat="@drawable/ic_call"
                    android:layout_width="25dp"
                    android:layout_height="25dp"/>

                <TextView
                    android:onClick="opnePhoneCall"
                    style="@style/style_rotobo_normal_white_bold"
                    android:textColor="@color/white"
                    android:textSize="17sp"
                    android:layout_marginLeft="10dp"
                    android:text="Call"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"/>

                <TextView
                    android:textAlignment="center"
                    style="@style/style_rotobo_normal_white_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginLeft="5dp"
                    android:text="at 871-000-6161"
                    android:textColor="@color/gray_color"
                    android:textSize="11sp" />

            </LinearLayout>

            <View
                android:layout_marginHorizontal="@dimen/dimen_20dp"
                android:layout_marginTop="@dimen/dimen_50dp"
                android:layout_marginBottom="@dimen/dimen_50dp"
                android:backgroundTint="@color/gray_color"
                android:background="@color/gray_color"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <ImageView
                android:layout_gravity="center_horizontal"
                android:background="@drawable/autroid_logo"
                android:layout_width="@dimen/dimen_150dp"
                android:layout_height="@dimen/dimen_35dp"/>

            <TextView
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:layout_marginTop="@dimen/dimen_20dp"
                style="@style/style_rotobo_normal"
                android:textColor="@color/gray_color"
                android:text="Autroid, 18/1, Near Mercedes-Benz,"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:layout_marginTop="2dp"
                style="@style/style_rotobo_normal"
                android:textColor="@color/gray_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sector 35, Gurugram - 122004(India)" />

            <TextView
                android:layout_marginBottom="@dimen/dimen_5dp"
                android:textSize="@dimen/size_11sp"
                style="@style/style_rotobo_normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:gravity="center_horizontal"
                android:text="Copyright All rigth reserved"
                android:textAlignment="center"
                android:textColor="@color/gray_color" />

        </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
