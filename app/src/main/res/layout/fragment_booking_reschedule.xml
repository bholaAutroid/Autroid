<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white_light"
    android:padding="@dimen/dimen_10dp">

    <!-- TODO: Update blank fragment layout -->
    <autroid.business.view.customviews.CustomTextView
        android:id="@+id/text_convenience"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Reschedule Booking"
        android:textColor="@color/text_black"
        android:textSize="@dimen/size_18sp" />

    <autroid.business.view.customviews.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:text="@string/select_date"
        android:textColor="@color/text_black"
        android:textSize="@dimen/size_18sp" />

    <autroid.business.view.customviews.CustomTextView
        android:id="@+id/date_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="YYYY-MM-DD"
        android:textColorHint="@color/white_dark"
        android:padding="8dp"
        android:textColor="@color/black" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:background="@color/white_dark"></View>

    <autroid.business.view.customviews.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:text="@string/select_time_slot"
        android:textColor="@color/text_black"
        android:textSize="@dimen/size_18sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/spn_timeslot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/dimen_20dp"
            android:backgroundTint="@color/white"
            android:tint="@color/white" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:layout_marginTop="@dimen/dimen_5dp"
        android:background="@color/white_dark"/>

    <Button
        android:id="@+id/booking_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_24dp"
        android:background="@drawable/red_button_selector"
        android:minHeight="@dimen/dimen_40dp"
        android:paddingLeft="@dimen/dimen_20dp"
        android:paddingRight="@dimen/dimen_20dp"
        android:text="@string/ef_done"
        android:textColor="@color/white" />

</LinearLayout>

