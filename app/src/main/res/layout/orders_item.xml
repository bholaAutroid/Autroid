<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/main_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="@dimen/dimen_5dp"
    app:cardElevation="@dimen/button_card_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:background="@color/card_color"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp">

            <autroid.business.view.customviews.CustomTextView
                android:id="@+id/order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white_dark" />

            <autroid.business.view.customviews.CustomTextView
                android:id="@+id/in_stock"
                android:layout_width="wrap_content"
                android:background="@color/black_color"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/white_dark"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp">

            <autroid.business.view.customviews.CustomTextView
                android:id="@+id/delivered_by"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white_dark"
                android:layout_marginRight="4dp"/>

            <autroid.business.view.customviews.CustomTextView
                android:id="@+id/time_slot"
                android:layout_toRightOf="@id/delivered_by"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white_dark"/>

            <autroid.business.view.customviews.CustomTextView
                android:id="@+id/time_left"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white_dark"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:orientation="horizontal">

            <autroid.business.view.customviews.CustomTextView
                android:id="@+id/name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/white_dark" />

            <ImageView
                android:id="@+id/btn_chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/home_chat"
                android:layout_marginRight="@dimen/dimen_10dp" />

            <ImageView
                android:id="@+id/btn_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/home_call" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>