<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/matt_black"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragment.profile.subscription.FreeFragment">



    <LinearLayout
        android:elevation="@dimen/dimen_20dp"
        android:padding="@dimen/dimen_20dp"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:layout_marginHorizontal="@dimen/dimen_20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/free_subs_back"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:orientation="vertical">

            <TextView
                style="@style/style_rotobo_medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Free"
                android:textAllCaps="true"
                android:textColor="#C6FFFFFF"
                android:textSize="30sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_rupee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:background="@drawable/ic_rupee_indian" />

                <TextView
                    android:id="@+id/tv_amount_free"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_2dp"
                    android:layout_toRightOf="@id/iv_rupee"
                    android:text="0"
                    android:textColor="@color/white_color"
                    android:textSize="28sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_2dp"
                    android:layout_marginTop="@dimen/dimen_5dp"
                    android:layout_toRightOf="@id/tv_amount_free"
                    android:text="/year"
                    android:textColor="@color/white_color"
                    android:textSize="20sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginHorizontal="@dimen/dimen_5dp"
                android:layout_marginTop="@dimen/dimen_30dp"
                android:background="@color/gray_color"
                android:backgroundTint="@color/white_color" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:orientation="vertical">


            <TextView
                style="@style/style_rotobo_medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:text="Limited invoices"
                android:textColor="@color/white_color"
                android:textSize="15sp" />

            <TextView
                style="@style/style_rotobo_medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:text="1 Users"
                android:textColor="@color/white_color"
                android:textSize="15sp" />

            <TextView
                style="@style/style_rotobo_medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:text="Autroid branding on invoices"
                android:textColor="@color/white_color"
                android:textSize="15sp" />

            <TextView
                style="@style/style_rotobo_medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:text="No Premium Customer Support"
                android:textColor="@color/white_color"
                android:textSize="15sp" />

            <TextView
                style="@style/style_rotobo_medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:text="Sales &amp; Purchase"
                android:textColor="@color/white_color"
                android:textSize="15sp" />

            <TextView
                style="@style/style_rotobo_medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:text="Accountant"
                android:textColor="@color/white_color"
                android:textSize="15sp" />

            <TextView
                style="@style/style_rotobo_medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:text="Management"
                android:textColor="@color/white_color"
                android:textSize="15sp" />

            <TextView
                style="@style/style_rotobo_medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:text="No Customer Relationship"
                android:textColor="@color/white_color"
                android:textSize="15sp" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_upgradeFreeSubs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_50dp"
            android:layout_marginTop="@dimen/dimen_50dp"
            android:background="@drawable/btn_back_gray"
            android:text="Upgrade"
            android:textAllCaps="false"
            android:textColor="@color/white_color"
            android:textSize="20sp" />
    </LinearLayout>



</LinearLayout>