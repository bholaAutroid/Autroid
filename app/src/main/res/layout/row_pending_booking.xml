<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/card_color"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="8dp"
    android:padding="5dp">

    <autroid.business.view.customviews.CustomTextView
        android:id="@+id/booking_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dimen_5dp"
        android:paddingBottom="@dimen/dimen_5dp"
        android:textColor="@color/white_dark"
        app:layout_constraintEnd_toStartOf="@+id/status"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <autroid.business.view.customviews.CustomTextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:background="@drawable/rectangle_red_color"
        android:gravity="end"
        android:padding="5dp"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/booking_id"
        app:layout_constraintTop_toTopOf="parent" />

    <autroid.business.view.customviews.CustomTextView
        android:id="@+id/date_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white_dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/booking_id" />

    <autroid.business.view.customviews.CustomTextView
        android:id="@+id/car_maker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white_dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/date_text" />

    <autroid.business.view.customviews.CustomTextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white_dark"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/dimen_5dp"
        app:layout_constraintTop_toBottomOf="@id/car_maker"/>

    <autroid.business.view.customviews.CustomTextView
        android:id="@+id/user_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white_dark"
        android:visibility="visible"
        android:layout_marginTop="@dimen/dimen_5dp"
        app:layout_constraintStart_toEndOf="@id/user_name"
        app:layout_constraintTop_toBottomOf="@id/car_maker"/>

    <autroid.business.view.customviews.CustomTextView
        android:id="@+id/careager_cash"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:textColor="@color/white_dark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone" />

</androidx.constraintlayout.widget.ConstraintLayout>