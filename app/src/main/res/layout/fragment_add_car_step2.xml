<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/window_background"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="autroid.business.view.fragment.addcar.AddCarStep1Fragment">

    <include
        android:id="@+id/common_toolbar"
        layout="@layout/layout_toolbar_activity"
        ></include>
    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/common_toolbar"
        android:background="@drawable/fragment_header"
        >
    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@id/common_toolbar"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/dimen_5dp"
            app:cardElevation="@dimen/button_card_elevation"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:id="@+id/main_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2">




                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="vertical"
                        android:paddingBottom="5dp"
                        android:paddingRight="5dp"

                        android:paddingTop="5dp">

                        <autroid.business.view.customviews.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_5dp"
                            android:text="Registration No." />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_10dp"
                            >
                        <autroid.business.view.customviews.CustomEditText
                            android:id="@+id/car_registration_no_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edittext_bg"
                            android:inputType="textCapCharacters"
                            android:maxLines="1"
                            android:maxLength="2"
                            android:paddingLeft="@dimen/dimen_10dp"
                            android:paddingRight="@dimen/dimen_10dp"
                            android:paddingBottom="@dimen/dimen_5dp"
                            android:paddingTop="@dimen/dimen_5dp"
                            android:imeOptions="actionNext"
                            android:hint="XX"
                            android:textColor="@color/black_color" />

                            <autroid.business.view.customviews.CustomTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dimen_10dp"
                                android:text="-" />

                            <autroid.business.view.customviews.CustomEditText
                                android:id="@+id/car_registration_no_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/edittext_bg"
                                android:inputType="number"
                                android:maxLines="1"
                                android:maxLength="3"
                                android:hint="00"
                                android:paddingLeft="@dimen/dimen_10dp"
                                android:paddingRight="@dimen/dimen_10dp"
                                android:paddingBottom="@dimen/dimen_5dp"
                                android:paddingTop="@dimen/dimen_5dp"
                                android:imeOptions="actionNext"
                                android:layout_marginLeft="@dimen/dimen_10dp"
                                android:textColor="@color/black_color" />

                            <autroid.business.view.customviews.CustomTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dimen_10dp"
                                android:text="-" />

                            <autroid.business.view.customviews.CustomEditText
                                android:id="@+id/car_registration_no_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/edittext_bg"
                                android:inputType="textCapCharacters"
                                android:maxLines="1"
                                android:maxLength="3"
                                android:hint="XX"
                                android:imeOptions="actionNext"
                                android:paddingLeft="@dimen/dimen_10dp"
                                android:paddingRight="@dimen/dimen_10dp"
                                android:paddingBottom="@dimen/dimen_5dp"
                                android:paddingTop="@dimen/dimen_5dp"
                                android:layout_marginLeft="@dimen/dimen_10dp"
                                android:textColor="@color/black_color" />

                            <autroid.business.view.customviews.CustomTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dimen_10dp"
                                android:text="-" />

                            <autroid.business.view.customviews.CustomEditText
                                android:id="@+id/car_registration_no_4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/edittext_bg"
                                android:inputType="number"
                                android:maxLines="1"
                                android:maxLength="4"
                                android:paddingLeft="@dimen/dimen_10dp"
                                android:paddingRight="@dimen/dimen_10dp"
                                android:paddingBottom="@dimen/dimen_5dp"
                                android:paddingTop="@dimen/dimen_5dp"
                                android:layout_marginLeft="@dimen/dimen_10dp"
                                android:hint="0000"
                                android:textColor="@color/black_color" />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_1dp"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:background="@color/lightgrey" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2">




                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/dimen_5dp"
                        android:paddingLeft="@dimen/dimen_5dp"
                        android:paddingTop="@dimen/dimen_5dp">

                        <autroid.business.view.customviews.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_5dp"
                            android:text="KM driven" />

                        <autroid.business.view.customviews.CustomEditText
                            android:id="@+id/car_kms"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edittext_bg"
                            android:inputType="numberDecimal"
                            android:maxLines="1"
                            android:paddingBottom="@dimen/dimen_10dp"
                            android:paddingLeft="@dimen/dimen_5dp"
                            android:paddingRight="@dimen/dimen_5dp"
                            android:paddingTop="@dimen/dimen_10dp"
                            android:textColor="@color/black_color" />
                    </LinearLayout>


                    <View
                        android:layout_width="@dimen/dimen_1dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:background="@color/lightgrey" />
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/dimen_5dp"
                        android:paddingLeft="@dimen/dimen_5dp"
                        android:paddingTop="@dimen/dimen_5dp">

                        <autroid.business.view.customviews.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_5dp"
                            android:text="Purchased in" />

                        <autroid.business.view.customviews.CustomTextView
                            android:id="@+id/year"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edittext_bg"
                            android:inputType="number"
                            android:maxLines="1"
                            android:paddingBottom="@dimen/dimen_10dp"
                            android:paddingLeft="@dimen/dimen_5dp"
                            android:paddingRight="@dimen/dimen_5dp"
                            android:paddingTop="@dimen/dimen_10dp"
                            android:textColor="@color/black_color" />
                    </LinearLayout>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_1dp"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:background="@color/lightgrey" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingBottom="5dp"
                        android:paddingRight="5dp"

                        android:paddingTop="5dp">

                        <autroid.business.view.customviews.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_5dp"
                            android:text="Insurance" />

                        <androidx.appcompat.widget.AppCompatSpinner
                            android:id="@+id/spn_insurance"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/spinner_bg_black"
                            android:padding="@dimen/dimen_5dp" />
                    </LinearLayout>

                    <View
                        android:layout_width="@dimen/dimen_1dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:background="@color/lightgrey" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/dimen_5dp"
                        android:paddingLeft="@dimen/dimen_5dp"
                        android:paddingTop="@dimen/dimen_5dp">

                        <autroid.business.view.customviews.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_5dp"
                            android:text="Accidental" />

                        <androidx.appcompat.widget.AppCompatSpinner
                            android:id="@+id/spn_accidental"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/spinner_bg_black"
                            android:padding="@dimen/dimen_5dp" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_1dp"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:background="@color/lightgrey" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingBottom="5dp"
                        android:paddingRight="5dp"

                        android:paddingTop="5dp">

                        <autroid.business.view.customviews.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_5dp"
                            android:text="Ownership" />

                        <androidx.appcompat.widget.AppCompatSpinner
                            android:id="@+id/spn_owner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/spinner_bg_black"
                            android:padding="@dimen/dimen_5dp" />

                    </LinearLayout>

                    <View
                        android:layout_width="@dimen/dimen_1dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:background="@color/lightgrey" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/dimen_5dp"
                        android:paddingLeft="@dimen/dimen_5dp"
                        android:paddingTop="@dimen/dimen_5dp">

                        <autroid.business.view.customviews.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_5dp"
                            android:text="Service History" />

                        <androidx.appcompat.widget.AppCompatSpinner
                            android:id="@+id/spn_service_history"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/spinner_bg_black"
                            android:padding="@dimen/dimen_5dp" />
                    </LinearLayout>
                </LinearLayout>



                <autroid.business.view.customviews.CustomButtonView
                    android:id="@+id/car_next"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_20dp"
                    android:text="Next" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </ScrollView>

</RelativeLayout>
