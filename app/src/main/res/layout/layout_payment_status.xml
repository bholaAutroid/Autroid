<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_50dp"
        android:layout_margin="@dimen/dimen_10dp"
    android:background="@drawable/background_transparent"
        >

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_20dp"
            android:orientation="vertical"
            android:background="@drawable/rectangle_background_white_corner8dp"
            >

            <ImageView
                android:id="@+id/img_payment_status"
                android:layout_width="@dimen/dimen_99dp"
                android:layout_height="@dimen/dimen_99dp"
                android:layout_alignParentTop="true"
                android:background="@mipmap/ic_payment_success"
                android:layout_gravity="center_horizontal"
                android:layout_centerInParent="true"
                />

            <autroid.business.view.customviews.CustomTextView
                android:id="@+id/booking_heading"
                android:layout_width="match_parent"
                android:text="AWESOME!"
                android:gravity="center"
                android:layout_gravity="center"
                android:background="@drawable/selector_transparent"
                android:padding="@dimen/dimen_10dp"
                android:textColor="@color/text_black"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_20sp"
                />

            <autroid.business.view.customviews.CustomTextView
                android:id="@+id/booking_text"
                android:layout_width="match_parent"
                android:text=""
                android:gravity="center"
                android:layout_gravity="center"
                android:background="@drawable/selector_transparent"
                android:padding="@dimen/dimen_10dp"
                android:textColor="@color/black_color"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_14sp"
                />

            <autroid.business.view.customviews.CustomTextView
                android:id="@+id/transaction_id"
                android:layout_width="match_parent"
                android:text=""
                android:gravity="center"
                android:layout_gravity="center"
                android:background="@drawable/selector_transparent"
                android:padding="@dimen/dimen_10dp"
                android:textColor="@color/text_black"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_13sp"
                />
            <autroid.business.view.customviews.CustomTextView
                android:id="@+id/booking_id"
                android:layout_width="match_parent"
                android:text=""
                android:gravity="center"
                android:layout_gravity="center"
                android:background="@drawable/selector_transparent"
                android:padding="@dimen/dimen_10dp"
                android:textColor="@color/text_black"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_13sp"
                />

            <autroid.business.view.customviews.CustomTextView
                android:id="@+id/amount"
                android:layout_width="match_parent"
                android:text=""
                android:gravity="center"
                android:layout_gravity="center"
                android:background="@drawable/selector_transparent"
                android:padding="@dimen/dimen_10dp"
                android:textColor="@color/text_black"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_13sp"
                />




            <Button
                android:id="@+id/booking_ok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:text="@string/ef_ok"
                android:background="@drawable/red_button"
                android:textColor="@color/white_color"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:layout_marginRight="@dimen/dimen_20dp"
                android:layout_gravity="end"
                />


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
    </androidx.cardview.widget.CardView>
