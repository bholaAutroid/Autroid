<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/main_layout"
    android:background="@color/matt_black">
    <RelativeLayout
        android:layout_marginLeft="@dimen/dimen_7dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:id="@+id/layout_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/offer_image"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:scaleType="centerCrop" />
<!--        <View-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent"-->
<!--            android:background="@drawable/bg_gradient_black_transparent" />-->
        <autroid.business.view.customviews.CustomTextView
            android:visibility="gone"
            android:id="@+id/validity_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_10dp"
            android:textColor="@color/white_color" />
        <LinearLayout
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="10dp"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <LinearLayout
                android:visibility="gone"
                android:layout_gravity="center"
                android:id="@+id/ll_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@color/red_color">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/ic_edit" />

            </LinearLayout>

            <autroid.business.view.customviews.CustomTextView
                android:visibility="gone"
                android:id="@+id/offer_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:gravity="center"
                style="@style/style_rotobo_normal"
                android:textColor="@color/white_light"
                android:singleLine="true"
                android:ellipsize="end"
                />
            <autroid.business.view.customviews.CustomTextView
                android:visibility="gone"
                android:id="@+id/offer_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:gravity="center"
                style="@style/style_rotobo_small_gray"
                android:textColor="@color/white_light"
                android:textSize="@dimen/size_10sp"
                />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
