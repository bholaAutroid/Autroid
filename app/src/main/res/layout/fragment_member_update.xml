<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/black_opacity60"
    android:padding="@dimen/dimen_10dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_background_mattblack_corner8dp"
            android:orientation="vertical"
            tools:context="autroid.business.view.fragment.jobcard.JobsUserDetails">

            <autroid.business.view.customviews.CustomTextView
                android:id="@+id/details_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:padding="4dp"
                android:text="Update Member"
                android:textColor="@color/white"
                android:textSize="@dimen/size_18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:background="@color/gray_color" />

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/member_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_20dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/white_dark"/>

            <Button
                android:id="@+id/update"
                android:layout_width="@dimen/dimen_80dp"
                android:layout_height="@dimen/dimen_40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:layout_marginBottom="@dimen/dimen_20dp"
                android:background="@drawable/red_button_selector"
                android:minHeight="@dimen/dimen_40dp"
                android:minWidth="@dimen/dimen_40dp"
                android:text="Save"
                android:textColor="@color/white_color" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
