<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/matt_black"
    tools:context="autroid.business.view.fragment.profile.ShowroomFragment">

    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:paddingTop="@dimen/dimen_40dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/showroom_cover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_gradient_black_transparent"></View>

            <LinearLayout
                android:id="@+id/ll_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_margin="@dimen/dimen_10dp"
                android:background="@drawable/selector_white"
                android:elevation="@dimen/dimen_5dp"
                android:padding="5dp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_edit"
                    android:backgroundTint="@color/red_color"
                    android:tint="@color/red_color" />

            </LinearLayout>

            <TextView
                android:id="@+id/rate_showroom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/dimen_5dp"
                android:background="@color/black_opacity60"
                android:padding="@dimen/dimen_5dp"
                android:text="Rate Business"
                android:textColor="@color/gray_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/rate_showroom"
                android:orientation="vertical">

                <autroid.business.view.customviews.CustomTextView
                    android:id="@+id/showroom_name"
                    style="@style/style_rotobo_medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:padding="@dimen/dimen_5dp"
                    android:text="" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dimen_5dp">

                    <RatingBar
                        android:id="@+id/careager_ratingbar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="@dimen/dimen_3dp"
                        android:isIndicator="true"
                        android:maxWidth="110dp"
                        android:numStars="5"
                        android:progressDrawable="@drawable/ratingbar_customized"
                        android:stepSize="1" />

                    <autroid.business.view.customviews.CustomTextView
                        android:id="@+id/total_ratings"
                        style="@style/style_rotobo_normal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_5dp"
                        android:padding="@dimen/dimen_2dp"
                        android:text="4.0"
                        app:textAllCaps="true" />

                </LinearLayout>


            </LinearLayout>

            <RelativeLayout
                android:id="@+id/ll_rate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/showroom_option"
                android:padding="@dimen/dimen_5dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_60dp"
                    android:visibility="gone">


                    <autroid.business.view.customviews.CustomTextView
                        android:id="@+id/careager_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="25dp"
                        android:background="@color/black_opacity60"
                        android:paddingLeft="@dimen/dimen_20dp"
                        android:paddingTop="@dimen/dimen_5dp"
                        android:paddingRight="@dimen/dimen_5dp"
                        android:text="55/5"
                        android:textColor="@color/white_color" />

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="80dp"
                        android:background="@drawable/ic_careager_verified" />
                </RelativeLayout>


            </RelativeLayout>

            <LinearLayout
                android:id="@+id/showroom_option"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_60dp"
                android:layout_alignParentBottom="true"
                android:visibility="gone"
                android:weightSum="3">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/dimen_24dp"
                            android:layout_height="@dimen/dimen_24dp"
                            android:tint="@color/white_color"
                            app:srcCompat="@drawable/ic_home" />

                        <autroid.business.view.customviews.CustomTextView
                            style="@style/style_rotobo_small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_5dp"
                            android:text="Home"
                            android:visibility="visible" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_3dp"
                        android:layout_alignParentBottom="true"
                        android:layout_gravity="bottom"
                        android:layout_marginTop="@dimen/dimen_5dp"
                        android:background="@color/red_color"
                        android:gravity="bottom" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/dimen_24dp"
                        android:layout_height="@dimen/dimen_24dp"
                        android:tint="@color/white_color"
                        app:srcCompat="@drawable/ic_car" />

                    <autroid.business.view.customviews.CustomTextView
                        style="@style/style_rotobo_small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_5dp"
                        android:text="cars"
                        android:visibility="visible" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/dimen_24dp"
                        android:layout_height="@dimen/dimen_24dp"
                        android:tint="@color/white_color"
                        app:srcCompat="@drawable/ic_product" />

                    <autroid.business.view.customviews.CustomTextView
                        style="@style/style_rotobo_small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_5dp"
                        android:text="Products"
                        android:visibility="visible" />
                </LinearLayout>
                ]

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="@dimen/dimen_5dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/dimen_10dp">

                <LinearLayout
                    android:id="@+id/showroom_navigate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:background="@drawable/selector_transparent"

                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatImageView

                        android:layout_width="@dimen/dimen_24dp"
                        android:layout_height="@dimen/dimen_24dp"
                        android:tint="@color/white_color"
                        app:srcCompat="@drawable/ic_navigation" />

                    <autroid.business.view.customviews.CustomTextView
                        style="@style/style_rotobo_small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Navigate"
                        android:textColor="@color/white_color"
                        android:visibility="visible" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/showroom_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_15dp"
                    android:gravity="center"
                    android:background="@drawable/selector_transparent"

                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ic_save"
                        android:layout_width="@dimen/dimen_24dp"
                        android:layout_height="@dimen/dimen_24dp"
                        android:tint="@color/white_color"
                        app:srcCompat="@drawable/ic_favorite" />

                    <autroid.business.view.customviews.CustomTextView
                        android:id="@+id/txt_save"
                        style="@style/style_rotobo_small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Save"
                        android:textColor="@color/white_color"
                        android:visibility="visible" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/showroom_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_15dp"
                    android:gravity="center"
                    android:background="@drawable/selector_transparent"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/dimen_24dp"
                        android:layout_height="@dimen/dimen_24dp"
                        android:tint="@color/white_color"
                        app:srcCompat="@drawable/ic_share" />

                    <autroid.business.view.customviews.CustomTextView
                        style="@style/style_rotobo_small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Share"
                        android:textColor="@color/white_color"
                        android:visibility="visible" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/showroom_chat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_15dp"
                    android:gravity="center"
                    android:background="@drawable/selector_transparent"

                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/dimen_24dp"
                        android:layout_height="@dimen/dimen_24dp"
                        android:tint="@color/white_color"
                        app:srcCompat="@drawable/ic_chat_vector" />

                    <autroid.business.view.customviews.CustomTextView
                        style="@style/style_rotobo_small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chat"
                        android:textColor="@color/white_color"
                        android:visibility="visible" />
                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/dimen_5dp"
            app:cardElevation="@dimen/button_card_elevation"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/card_color"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"

                    android:paddingBottom="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="6">

                        <autroid.business.view.customviews.CustomTextView
                            style="@style/style_rotobo_normal_black_bold"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:gravity="start"
                            android:text="@string/category"
                            android:textColor="@color/gray_color_button"
                            android:textStyle="bold" />

                        <autroid.business.view.customviews.CustomTextView
                            android:id="@+id/showroom_category"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4.5"
                            android:gravity="start"
                            android:text=""
                            android:textColor="@color/white_dark" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_5dp"
                        android:weightSum="6">

                        <autroid.business.view.customviews.CustomTextView
                            style="@style/style_rotobo_normal_black_bold"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:gravity="start"
                            android:text="@string/location"
                            android:textColor="@color/gray_color_button"
                            android:textStyle="bold" />

                        <autroid.business.view.customviews.CustomTextView
                            android:id="@+id/showroom_location"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4.5"
                            android:gravity="start"
                            android:textColor="@color/white_dark" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_5dp"
                        android:weightSum="6">

                        <autroid.business.view.customviews.CustomTextView
                            style="@style/style_rotobo_normal_black_bold"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:gravity="start"
                            android:text="@string/profile_link"
                            android:textColor="@color/gray_color_button"
                            android:textStyle="bold" />

                        <autroid.business.view.customviews.CustomTextView
                            android:id="@+id/careager_url"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4.5"
                            android:gravity="start"
                            android:textColor="@color/white_dark" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_5dp"
                        android:weightSum="6">

                        <autroid.business.view.customviews.CustomTextView
                            style="@style/style_rotobo_normal_black_bold"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:gravity="start"
                            android:text="@string/joined"
                            android:textColor="@color/gray_color_button"
                            android:textStyle="bold" />

                        <autroid.business.view.customviews.CustomTextView
                            android:id="@+id/showroom_joined"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"

                            android:layout_weight="4.5"
                            android:gravity="start"
                            android:textColor="@color/white_dark" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_5dp"
                        android:weightSum="6">

                        <autroid.business.view.customviews.CustomTextView
                            style="@style/style_rotobo_normal_black_bold"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:gravity="start"
                            android:text="@string/contact"
                            android:textColor="@color/gray_color_button"
                            android:textStyle="bold" />

                        <autroid.business.view.customviews.CustomTextView
                            android:id="@+id/showroom_contact"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"

                            android:layout_weight="4.5"
                            android:gravity="start"
                            android:textColor="@color/white_dark" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_5dp"
                        android:weightSum="6">

                        <autroid.business.view.customviews.CustomTextView
                            style="@style/style_rotobo_normal_black_bold"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:gravity="start"
                            android:text="@string/description"
                            android:textColor="@color/gray_color_button"
                            android:textStyle="bold" />

                        <autroid.business.view.customviews.CustomTextView
                            android:id="@+id/showroom_description"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"

                            android:layout_weight="4.5"
                            android:gravity="start"
                            android:textColor="@color/white_dark" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_5dp"
                        android:orientation="vertical"
                        android:weightSum="6">

                        <autroid.business.view.customviews.CustomTextView
                            style="@style/style_rotobo_normal_black_bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:gravity="start"
                            android:text="@string/timings"
                            android:textColor="@color/gray_color_button"
                            android:textStyle="bold"
                            android:visibility="gone" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_5dp"
                            android:layout_weight="4.5"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <autroid.business.view.customviews.CustomTextView
                                    android:id="@+id/day_mon"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"

                                    android:layout_weight="1"
                                    android:gravity="start"
                                    android:textColor="@color/white_dark"
                                    android:textSize="@dimen/size_12sp" />

                                <autroid.business.view.customviews.CustomTextView
                                    android:id="@+id/day_tue"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"

                                    android:layout_weight="1"
                                    android:gravity="start"
                                    android:textColor="@color/white_dark"
                                    android:textSize="@dimen/size_12sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dimen_3dp"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <autroid.business.view.customviews.CustomTextView
                                    android:id="@+id/day_wed"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"

                                    android:layout_weight="1"
                                    android:gravity="start"
                                    android:textColor="@color/white_dark"
                                    android:textSize="@dimen/size_12sp" />

                                <autroid.business.view.customviews.CustomTextView
                                    android:id="@+id/day_thrus"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"

                                    android:layout_weight="1"
                                    android:gravity="start"
                                    android:textColor="@color/white_dark"
                                    android:textSize="@dimen/size_12sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dimen_3dp"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <autroid.business.view.customviews.CustomTextView
                                    android:id="@+id/day_fri"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="start"
                                    android:textColor="@color/white_dark"
                                    android:textSize="@dimen/size_12sp" />

                                <autroid.business.view.customviews.CustomTextView
                                    android:id="@+id/day_sat"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="start"
                                    android:textColor="@color/white_dark"
                                    android:textSize="@dimen/size_12sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dimen_3dp"
                                android:weightSum="2">

                                <autroid.business.view.customviews.CustomTextView
                                    android:id="@+id/day_sun"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="start"
                                    android:textColor="@color/white_dark"
                                    android:textSize="@dimen/size_12sp" />

                                <autroid.business.view.customviews.CustomTextView
                                    android:id="@+id/assistance"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="start"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/size_12sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dimen_3dp"
                                android:weightSum="2">


                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_20dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <autroid.business.view.customviews.CustomTextView
                            style="@style/style_rotobo_normal_black_bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:text="@string/links"
                            android:textColor="@color/gray_color_button"
                            android:textStyle="bold"
                            android:visibility="gone" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="5"
                            android:gravity="center"

                            android:text="@string/location"
                            android:textColor="@color/white_dark">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/img_youtube"
                                android:layout_width="@dimen/dimen_30dp"
                                android:layout_height="@dimen/dimen_30dp"
                                app:srcCompat="@drawable/ic_youtube" />

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/img_twitter"
                                android:layout_width="@dimen/dimen_30dp"
                                android:layout_height="@dimen/dimen_30dp"
                                android:layout_marginLeft="@dimen/dimen_5dp"
                                app:srcCompat="@drawable/ic_twitter" />

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/img_linkedin"
                                android:layout_width="@dimen/dimen_30dp"
                                android:layout_height="@dimen/dimen_30dp"
                                android:layout_marginLeft="@dimen/dimen_5dp"
                                app:srcCompat="@drawable/ic_linkedin" />

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/img_instagram"
                                android:layout_width="@dimen/dimen_30dp"
                                android:layout_height="@dimen/dimen_30dp"
                                android:layout_marginLeft="@dimen/dimen_5dp"
                                app:srcCompat="@drawable/ic_instagram" />

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/img_google_plus"
                                android:layout_width="@dimen/dimen_30dp"
                                android:layout_height="@dimen/dimen_30dp"
                                android:layout_marginLeft="@dimen/dimen_5dp"
                                app:srcCompat="@drawable/ic_google_plus" />

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/img_fb"
                                android:layout_width="@dimen/dimen_30dp"
                                android:layout_height="@dimen/dimen_30dp"
                                android:layout_marginLeft="@dimen/dimen_5dp"
                                app:srcCompat="@drawable/ic_facebook" />

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/img_web"
