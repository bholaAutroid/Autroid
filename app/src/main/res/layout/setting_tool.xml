<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/setting_tool"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:background="@color/black"
        android:minHeight="?attr/actionBarSize"
        app:theme="@style/Toolbar_Theme">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_bacAerro"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/ic_baseline_arrow_back_24"
                android:layout_width="@dimen/dimen_30dp"
                android:layout_height="@dimen/dimen_30dp"
                app:tint="@color/gray_color" />

            <autroid.business.view.customviews.CustomTextView
                android:text="Settings"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_gravity="center_vertical"
                android:id="@+id/toolbar_title_setting"
                style="@style/style_rotobo_normal_white_bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/white_color"
                android:textSize="@dimen/size_18sp" />


        </LinearLayout>


    </androidx.appcompat.widget.Toolbar>
</LinearLayout>
