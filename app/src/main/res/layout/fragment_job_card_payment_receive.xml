<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_opacity60"
    android:clickable="true"
    android:padding="@dimen/dimen_20dp"
    tools:context="autroid.business.view.fragment.jobcard.JobCardPaymentReceiveFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/matt_black_selector"
        android:orientation="vertical"
        android:padding="@dimen/dimen_10dp">

        <autroid.business.view.customviews.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Receive Payment"
            android:textColor="@color/white_dark"
            android:textSize="@dimen/size_18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:background="@color/gray_color_button" />

        <autroid.business.view.customviews.CustomTextView
            android:id="@+id/due"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:gravity="center"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/size_14sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColorHint="@color/gray_color_button"
            app:hintAnimationEnabled="false">

            <autroid.business.view.customviews.CustomEditText
                android:id="@+id/amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/color_transparent"
                android:hint="Enter Amount"
                android:inputType="numberDecimal"
                android:padding="16dp"
                android:singleLine="true"
                android:textColor="@color/white_dark"
                android:textColorHint="@color/gray_color_button" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black" />

        </com.google.android.material.textfield.TextInputLayout>

        <autroid.business.view.customviews.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:paddingLeft="@dimen/dimen_15dp"
            android:text="Select Payment Mode"
            android:textColor="@color/gray_color_button" />

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/payment_mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:background="@color/color_transparent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:background="@color/black"></View>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:textColorHint="@color/gray_color_button"
            app:hintAnimationEnabled="false">

            <autroid.business.view.customviews.CustomTextView
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="Date"
                android:padding="@dimen/dimen_15dp"
                android:textColorHint="@color/gray_color_button"
                android:textColor="@color/white_dark"
                android:textSize="@dimen/size_14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColorHint="@color/gray_color_button"
            app:hintAnimationEnabled="false">

            <autroid.business.view.customviews.CustomEditText
                android:id="@+id/transaction_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/color_transparent"
                android:hint="Enter Transaction ID"
                android:inputType="textCapCharacters"
                android:padding="16dp"
                android:singleLine="true"
                android:textColor="@color/white_dark"
                android:textColorHint="@color/gray_color_button" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"></View>

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btn_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:background="@drawable/red_button_selector"
            android:minHeight="@dimen/dimen_40dp"
            android:paddingLeft="@dimen/dimen_20dp"
            android:paddingRight="@dimen/dimen_20dp"
            android:text="Done"
            android:textColor="@color/white" />

    </LinearLayout>

</RelativeLayout>
