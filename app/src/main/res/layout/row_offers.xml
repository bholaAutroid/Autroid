<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/dimen_10dp"
    android:layout_marginRight="@dimen/dimen_10dp"
    android:layout_marginTop="@dimen/dimen_10dp"
    android:elevation="@dimen/dimen_2dp"
    android:background="@color/white_color">
    <RelativeLayout
        android:id="@+id/layout_header"
        android:layout_width="match_parent"
        android:layout_height="200dp">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/offer_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        />
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_gradient_black_transparent"
            ></View>
        <autroid.business.view.customviews.CustomTextView
            android:id="@+id/validity_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_10dp"
            android:textColor="@color/white_color"
            />
        <LinearLayout
            android:id="@+id/ll_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_margin="@dimen/dimen_10dp"
            android:elevation="@dimen/dimen_5dp"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:background="@drawable/selector_white"
            >
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_edit"
                android:tint="@color/red_color"
                android:backgroundTint="@color/red_color"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="10dp"
            android:gravity="center_vertical"
            >


            <TextView
                android:id="@+id/offer_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/white_color"
                android:text=""
                android:maxLines="2"
                android:textSize="@dimen/size_18sp"
                />
        </LinearLayout>
    </RelativeLayout>
    <autroid.business.view.customviews.CustomTextView
        android:id="@+id/offer_description"
        style="@style/style_rotobo_normal_black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="left"
        android:layout_marginTop="@dimen/dimen_5dp"
        android:singleLine="true"
        android:padding="@dimen/dimen_5dp"
         />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:weightSum="3">

        <Button
            android:id="@+id/offer_publish"
            android:layout_width="@dimen/dimen_0.5dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="@dimen/dimen_40dp"
            android:text="Unpublish"
            android:textColor="@color/selector_white_button_text_color"
            android:background="@drawable/selector_white_button"
            android:textSize="@dimen/size_12sp" />

        <Button
            android:id="@+id/offer_edit"
            android:layout_width="@dimen/dimen_0.5dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_5dp"
            android:layout_weight="1"
            android:minHeight="@dimen/dimen_40dp"
            android:text="Edit"
            android:textColor="@color/selector_white_button_text_color"
            android:background="@drawable/selector_white_button"
            android:textSize="@dimen/size_12sp" />

        <Button
            android:id="@+id/offer_share"
            android:layout_width="@dimen/dimen_0.5dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_5dp"
            android:layout_weight="1"
            android:minHeight="@dimen/dimen_40dp"
            android:text="Share"
            android:textColor="@color/selector_white_button_text_color"
            android:background="@drawable/selector_white_button"
            android:textSize="@dimen/size_12sp" />
    </LinearLayout>
</LinearLayout>
