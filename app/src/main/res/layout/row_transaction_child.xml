<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dimen_5dp"
    >

    <autroid.business.view.customviews.CustomTextView
        android:id="@+id/date_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/matt_black"
        android:textSize="@dimen/size_12sp"
        android:textColor="@color/white_dark"
        android:paddingLeft="@dimen/dimen_10dp"
        android:paddingRight="@dimen/dimen_10dp"
        android:paddingTop="@dimen/dimen_5dp"
        android:paddingBottom="@dimen/dimen_5dp"
        android:text=""
        android:layout_marginLeft="@dimen/dimen_5dp"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        />

    <autroid.business.view.customviews.CustomTextView
        android:id="@+id/activity_text"
        android:layout_toRightOf="@id/date_text"
        android:paddingLeft="@dimen/dimen_10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/size_12sp"
        style="@style/style_rotobo_normal_black_bold"
        android:textColor="@color/gray_color_button"
        android:padding="@dimen/dimen_10dp"
        android:layout_centerInParent="true"
        android:text=""
        android:layout_toLeftOf="@+id/ll_amount"
        />

<LinearLayout
    android:id="@+id/ll_amount"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:orientation="vertical"
    android:gravity="end"
    android:layout_centerInParent="true"
    android:layout_gravity="end"
    android:layout_marginRight="@dimen/dimen_10dp"
    >
    <autroid.business.view.customviews.CustomTextView
        android:id="@+id/amount_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+ 350"
        />
    <autroid.business.view.customviews.CustomTextView
        android:id="@+id/transaction_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Earned"
        android:textSize="@dimen/size_8sp"
        />
</LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/lightgrey"
        android:layout_marginTop="@dimen/dimen_5dp"
        android:layout_marginBottom="@dimen/dimen_5dp"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:layout_marginRight="@dimen/dimen_10dp"
        android:visibility="gone"
        ></View>

</RelativeLayout>
