<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rectangle_background_white_corner8dp"
    android:orientation="vertical"
    android:padding="@dimen/dimen_5dp"

    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_10dp"
        >
        <autroid.business.view.customviews.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/body_type"
            android:textSize="@dimen/size_22sp"
            android:textColor="@color/black_color"
            />

        <LinearLayout
            android:id="@+id/ll_cross"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_5dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/selector_transparent"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_delete"

                />
        </LinearLayout>

    </RelativeLayout>
    <Button
        android:id="@+id/body_metallic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Metallic/Solid"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="10dp"
        android:layout_gravity="center"
        android:textColor="@color/selector_white_button_text_color"
        android:background="@drawable/white_button_bg"
        />

    <Button
        android:id="@+id/body_aluminium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Aluminium"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="10dp"
        android:layout_gravity="center"
        android:textColor="@color/selector_white_button_text_color"
        android:background="@drawable/white_button_bg"
        />
</LinearLayout>
