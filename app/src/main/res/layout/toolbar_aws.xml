<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.Toolbar
        app:theme="@style/Toolbar_Theme"
        android:id="@+id/toolbar1"
        android:background="@drawable/awstook"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50dp"
        android:layout_alignParentTop="true"
        android:minHeight="?attr/actionBarSize">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <autroid.business.view.customviews.CustomTextView
                android:layout_alignParentLeft="true"
                android:text="HOME"
                android:id="@+id/toolbar_title"
                style="@style/style_rotobo_normal_white_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white_color"
                android:textSize="@dimen/size_18sp" />


            <androidx.appcompat.widget.AppCompatImageView
                android:layout_marginRight="@dimen/dimen_15dp"
                android:layout_alignParentEnd="true"
                android:id="@+id/img_notification"
                app:tint="@color/white_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_notification" />


            <TextView
                style="@style/style_rotobo_normal"
                android:textColor="@color/white_color"
                android:textStyle="bold"
                android:text="0"
                android:gravity="center"
                android:layout_marginRight="@dimen/dimen_4dp"
                android:id="@+id/tv_countNotification"
                android:layout_alignParentEnd="true"
                android:background="@drawable/back_notification_red"
                android:layout_width="18dp"
                android:layout_height="18dp"/>

        </RelativeLayout>


    </androidx.appcompat.widget.Toolbar>
</RelativeLayout>
