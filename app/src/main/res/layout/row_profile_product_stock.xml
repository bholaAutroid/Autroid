<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="200dp"
    android:orientation="vertical"
    android:layout_marginRight="@dimen/dimen_5dp"
    android:elevation="@dimen/dimen_2dp"
    android:layout_marginBottom="@dimen/dimen_2dp"
    android:id="@+id/main_layout"
    android:background="@color/white_color"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/layout_header"
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/product_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black_opacity20"
            ></View>

        <autroid.business.view.customviews.CustomTextView
            android:id="@+id/product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="Rs 500"
            android:padding="@dimen/dimen_10dp"
            android:textColor="@color/white_color"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="@dimen/dimen_10dp"
            android:visibility="gone"
            >
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/dimen_24dp"
                android:layout_height="@dimen/dimen_24dp"
                app:srcCompat="@drawable/ic_navigation"
                android:tint="@color/white_color"
                />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/dimen_24dp"
                android:layout_height="@dimen/dimen_24dp"
                app:srcCompat="@drawable/ic_share"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:tint="@color/white_color"
                />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/dimen_24dp"
                android:layout_height="@dimen/dimen_24dp"
                app:srcCompat="@drawable/ic_favorite_border"
                android:tint="@color/white_color"
                android:layout_marginLeft="@dimen/dimen_10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:background="@color/black_opacity60"
            android:padding="@dimen/dimen_10dp"
            >
            <autroid.business.view.customviews.CustomTextView
                android:id="@+id/product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3302"
                style="@style/style_rotobo_normal"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/white_light"
                android:gravity="center_horizontal"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:visibility="gone"
                android:background="@color/lightgrey"></View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                >
                <autroid.business.view.customviews.CustomTextView
                    android:id="@+id/product_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2012"
                    style="@style/style_rotobo_small_gray"
                    android:textColor="@color/white_light"
                    android:textSize="@dimen/size_10sp"
                    />

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>



</LinearLayout>
